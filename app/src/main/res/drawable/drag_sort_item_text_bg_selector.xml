<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/color_ffd2d2d2" android:dashGap="2.0dip" android:dashWidth="4.0dip" />
                    <solid android:color="@color/color_fff5f5f5" />
                    <corners android:radius="2dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.0dip" android:color="@color/color_ffcc3131" />
            <solid android:color="@color/color_ffffffff" />
            <corners android:radius="2dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/color_ffd9d9d9" />
            <solid android:color="@color/color_ffefefef" />
            <corners android:radius="2dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dip" android:color="@color/color_ffcdcdcd" />
            <solid android:color="@color/color_fff9f9f9" />
            <corners android:radius="2dip" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="@color/color_ffcdcdcd" />
            <solid android:color="@color/color_ffffff" />
            <corners android:radius="2dip" />
        </shape>
    </item>
</selector>